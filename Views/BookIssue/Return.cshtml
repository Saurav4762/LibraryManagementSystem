@model Practice_Project.Entities.BookIssue

@{
    ViewData["Title"] = "Return Book";
}

<div class="container mt-4">
    <h2 class="mb-4">Return Book</h2>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5>Book & Student Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Book Title</dt>
                <dd class="col-sm-9"><strong>@Model.Book.Title</strong></dd>

                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Model.Book.Author</dd>

                <dt class="col-sm-3">Student</dt>
                <dd class="col-sm-9">@Model.Student.Name</dd>

                <dt class="col-sm-3">Issue Date</dt>
                <dd class="col-sm-9">@Model.IssueDate</dd>

                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">@Model.DueDate</dd>

                <dt class="col-sm-3">Today's Date</dt>
                <dd class="col-sm-9">@DateTime.UtcNow</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Return" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success btn-lg">
                Proceed to Return
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">
                Cancel
            </a>
        </form>
    </div>
</div>