@model Practice_Project.Models.BookIssueViewModel

@{
    ViewData["Title"] = "Issue New Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="mb-0"><i class="fas fa-book me-2"></i>Issue New Book</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Show all validation errors at top -->
                        <div asp-validation-summary="All" class="alert alert-danger rounded" role="alert"></div>
                        <!-- Book Dropdown -->
                        <div class="mb-4">
                            <label asp-for="BookId" class="form-label fw-bold"></label>
                            <select asp-for="BookId" class="form-select form-select-lg"
                                    asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>

                        <!-- Student Dropdown -->
                        <div class="mb-4">
                            <label asp-for="StudentId" class="form-label fw-bold"></label>
                            <select asp-for="StudentId" class="form-select form-select-lg"
                                    asp-items="@(new SelectList(ViewBag.Students, "Id", "Name"))">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                Issue Book
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}