@model Practice_Project.Entities.BookIssue

@{
    ViewData["Title"] = "Confirm Fine Payment";
}

<div class="container mt-4">
    <div class="alert alert-warning text-center py-4">
        <h4>Overdue Fine Detected</h4>
        <p class="lead">This book is overdue. Please collect the fine before returning.</p>
    </div>

    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h5>Fine Details</h5>
        </div>
        <div class="card-body text-center">
            <h1 class="display-4 text-danger">₹@ViewBag.CalculatedFine</h1>
            <p class="fs-4">
                Overdue by <strong>@ViewBag.OverdueDays day(s)</strong><br>
                Rate: ₹5 per day
            </p>
            <p>Return Date: <strong>@ViewBag.ReturnDate</strong></p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h5>Book Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Book</dt>
                <dd class="col-sm-9">@Model.Book.Title</dd>
                <dt class="col-sm-3">Student</dt>
                <dd class="col-sm-9">@Model.Student.Name</dd>
                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">@Model.DueDate:dd MMM yyyy</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        <form asp-action="Return" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="action" value="confirm" />

            <button type="submit" class="btn btn-success btn-lg px-5">
                Collect Fine & Return Book
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-3">
                Cancel
            </a>
        </form>
    </div>
</div>