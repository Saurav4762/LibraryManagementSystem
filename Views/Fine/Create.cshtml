@model Practice_Project.Entities.Fine

@{
    ViewData["Title"] = "Create Manual Fine";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Create Manual Fine</h3>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded"></div>

                        <div class="mb-4">
                            <label asp-for="BookIssueId" class="form-label fw-bold">Book Issue (Overdue Returns)</label>
                            <select asp-for="BookIssueId" class="form-select form-select-lg"
                                    asp-items="@(new SelectList(ViewBag.BookIssues, "Id", "Book.Title"))">
                                <option value="">-- Select Overdue Issue --</option>
                            </select>
                            <span asp-validation-for="BookIssueId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-bold">Fine Amount (â‚¹)</label>
                            <input asp-for="Amount" class="form-control form-control-lg" placeholder="Enter amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Create Fine
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}