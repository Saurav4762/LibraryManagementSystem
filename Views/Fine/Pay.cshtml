@using Practice_Project.Entities  <!-- Import namespace for IntelliSense -->

@model Fine

@{
    ViewData["Title"] = "Pay Fine";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-credit-card me-2"></i>Confirm Fine Payment</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Book Title:</strong></div>
                        <div class="col-sm-8">@Model.BookIssue.Book.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Student:</strong></div>
                        <div class="col-sm-8">@Model.BookIssue.Student.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Fine Amount:</strong></div>
                        <div class="col-sm-8"><strong>â‚¹@Model.Amount.ToString("F2")</strong></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Generated Date:</strong></div>
                        <div class="col-sm-8">@Model.GeneratedDate.ToString("dd-MM-yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Status:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-warning text-dark">Pending</span>
                        </div>
                    </div>

                    <p class="text-muted">Are you sure you want to mark this fine as paid? This action cannot be undone.</p>

                    <form asp-action="Pay" method="post">
                        @Html.AntiForgeryToken()  <!-- Required for ValidateAntiForgeryToken -->
                        <input type="hidden" asp-for="Id" />  <!-- Pass the fine ID -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Confirm Payment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>