@model Practice_Project.Entities.Fine

@{
    ViewData["Title"] = "Fine Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Fine Details</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5>Book Issue Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Student:</strong> @Model.Student.Name</p>
                    <p><strong>Book:</strong> @Model.BookIssue.Book.Title</p>
                    <p><strong>Issue Date:</strong> @Model.BookIssue.IssueDate.ToString("dd MMM yyyy")</p>
                    <p><strong>Due Date:</strong> @Model.BookIssue.DueDate.ToString("dd MMM yyyy")</p>
                    <p><strong>Return Date:</strong> @(Model.BookIssue.ReturnDate?.ToString("dd MMM yyyy") ?? "Not returned")</p>
                    <p><strong>Fine Amount:</strong> <span class="text-danger fw-bold">₹@Model.BookIssue.FineAmount</span></p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5>Fine Payment</h5>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-danger">₹@Model.Amount</h1>
                    <p><strong>Calculated On:</strong> @Model.CalculatedOn.ToString("dd MMM yyyy")</p>
                    <p><strong>Status:</strong>
                        <span class="badge fs-4 @(Model.IsPaid ? "bg-success" : "bg-warning")">
                            @(Model.IsPaid ? "PAID" : "UNPAID")
                        </span>
                    </p>
                    <p><strong>Paid On:</strong>
                        <span class="fs-5 text-success fw-bold">
                            @(Model.PaidOn?.ToString("dd MMM yyyy") ?? "-")
                        </span>
                    </p>

                    @if (!Model.IsPaid)
                    {
                        <form asp-action="MarkAsPaid" asp-route-id="@Model.Id" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-lg">
                                Mark as Paid Now
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="MainIndex" class="btn btn-secondary">Back to List</a>
    </div>
</div>