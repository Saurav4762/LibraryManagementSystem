@model IEnumerable<Practice_Project.Entities.Fine>

@{
    ViewData["Title"] = "Fines Records";
}

<div class="container mt-5">
    <h2 class="display-6 mb-4">Fines Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Student</th>
                            <th>Book</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Fine Amount</th>
                            <th>Calculated On</th>
                            <th>Paid On</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center py-5 text-muted">
                                    No fines recorded yet.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var fine in Model)
                            {
                                <tr>
                                    <td><strong>@fine.Student.Name</strong></td>
                                    <td>@fine.BookIssue.Book.Title</td>
                                    <td>@fine.BookIssue.IssueDate.ToString("dd MMM yyyy")</td>
                                    <td>@fine.BookIssue.DueDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @(fine.BookIssue.ReturnDate?.ToString("dd MMM yyyy") ?? "-")
                                    </td>
                                    <td class="text-danger fw-bold">â‚¹@fine.Amount</td>
                                    <td>@fine.CalculatedOn.ToString("dd MMM yyyy")</td>
                                    <td class="text-success fw-bold">
                                        @(fine.PaidOn?.ToString("dd MMM yyyy") ?? "-")
                                    </td>
                                    <td>
                                        <span class="badge @(fine.IsPaid ? "bg-success" : "bg-warning")">
                                            @(fine.IsPaid ? "Paid" : "Unpaid")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="ShowDetails" asp-route-id="@fine.Id" 
                                           class="btn btn-sm btn-info">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>