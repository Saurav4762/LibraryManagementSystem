@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body {
            background-color: #f4f4f4;
        }
        #navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgb(43, 43, 92);
            width: 100%;
            height: 60px;
            padding: 0 20px;
        }
        #logo {
            color: white;
            font-size: 28px;
            font-weight: bold;
        }
        #logo::first-letter {
            color: red;
        }
        #link a {
            color: white;
            text-decoration: none;
            text-transform: capitalize;
            padding: 12px 20px;
            margin: 0 5px;
            font-size: 18px;
        }
        #link a:hover {
            color: rgb(255, 0, 0);
            background-color: rgba(255,255,255,0.1);
            border-radius: 5px;
        }
        .hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgb(43, 43, 92);
            width: 100%;
            min-height: 80vh;
            padding: 50px;
        }
        #text {
            color: white;
            max-width: 600px;
        }
        #text h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }
        #text p {
            color: red;
            font-size: 36px;
            text-decoration: underline;
            margin-bottom: 40px;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .stat-card {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            backdrop-filter: blur(5px);
        }
        .stat-card h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .stat-card p {
            font-size: 42px;
            color: red;
            font-weight: bold;
        }
        img {
            width: 400px;
            height: 400px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
        }
        
            .hero {
                flex-direction: column;
                text-align: center;
            }
            img {
                margin-top: 40px;
                width: 300px;
                height: 300px;
            }
        
    </style>
</head>
<body>
    <nav id="navbar" class="navbar">
        <div id="logo">LMS</div>
        <div id="link">
            <a asp-controller="Home" asp-action="Index">home</a>
            <a asp-controller="Book" asp-action="Index">books</a>
            <a asp-controller="Student" asp-action="Index">students</a>
            <a asp-controller="BookIssue" asp-action="Index">issues</a>
            <a asp-controller="Category" asp-action="Index">categories</a>
            <a asp-controller="Author" asp-action="Index">authors</a>
        </div>
    </nav>

    <section class="hero">
        <div id="text">
            <h1>Welcome to Library</h1>
            <p>Management System</p>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Books</h3>
                    <p>@ViewBag.TotalBooks</p>
                </div>
                <div class="stat-card">
                    <h3>Total Students</h3>
                    <p>@ViewBag.TotalStudents</p>
                </div>
                <div class="stat-card">
                    <h3>Total Categories</h3>
                    <p>@ViewBag.TotalCategories</p>
                </div>
                <div class="stat-card">
                    <h3>Total Authors</h3>
                    <p>@ViewBag.TotalAuthors</p>
                </div>
                <div class="stat-card">
                    <h3>Total Issued Books</h3>
                    <p>@ViewBag.TotalIssuedBooks</p>
                </div>
                <div class="stat-card">
                    <h3>Currently Borrowed</h3>
                    <p>@ViewBag.CurrentlyBorrowed</p>
                </div>
            </div>
        </div>

        <div id="hero_img">
            <img src="~/images/download.png" alt="Library Image" />
        </div>
    </section>
</body>
</html>