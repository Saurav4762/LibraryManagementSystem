@model IEnumerable<Practice_Project.Entities.Fine>

@{
    ViewData["Title"] = "Fines Management";
}

<h2>Fines Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Fine</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Student</th>
        <th>Book</th>
        <th>Issue Due Date</th>
        <th>Amount</th>
        <th>Calculated On</th>
        <th>Status</th>
        <th>Paid On</th>
        <th>Paid By</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Student.Name</td>
            <td>@item.BookIssue.Book.Title</td>
            <td>@item.BookIssue.DueDate.ToString("yyyy-MM-dd")</td>
            <td>@item.Amount.ToString("C")</td>
            <td>@item.CalculatedOn.ToString("yyyy-MM-dd")</td>
            <td>
                @if (item.IsPaid)
                {
                    <span class="badge bg-success">Paid</span>
                }
                else
                {
                    <span class="badge bg-danger">Unpaid</span>
                }
            </td>
            <td>@(item.PaidOn?.ToString("yyyy-MM-dd") ?? "-")</td>
            <td>@(item.PaidBy ?? "-")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @if (!item.IsPaid)
                {
                    <a asp-action="MarkAsPaid" asp-route-id="@item.Id" class="text-success">Mark Paid</a> <text>|</text>
                }
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>