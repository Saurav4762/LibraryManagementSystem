@model Practice_Project.Entities.Fine

@{
    ViewData["Title"] = "Fine Details";
}

<h2>Fine Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.Student.Name (@Model.Student.RollNumber)</dd>

        <dt class="col-sm-3">Book</dt>
        <dd class="col-sm-9">@Model.BookIssue.Book.Title</dd>

        <dt class="col-sm-3">Due Date</dt>
        <dd class="col-sm-9">@Model.BookIssue.DueDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Fine Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Calculated On</dt>
        <dd class="col-sm-9">@Model.CalculatedOn.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsPaid)
            {
                <span class="badge bg-success">Paid on @Model.PaidOn?.ToString("yyyy-MM-dd") by @Model.PaidBy</span>
            }
            else
            {
                <span class="badge bg-danger">Unpaid</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>